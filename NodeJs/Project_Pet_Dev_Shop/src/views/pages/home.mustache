{{>../partials/header}}
  {{#banner}}
    <section
      class="banner"
      style="background-image: url({{urlBanner}})"
    >
      {{title}}
    </section>
    <h2>{{title}} disponíveis para adoção</h2>
  {{/banner}}
  <div class="container list">
    {{#animals}}
        <div class="item">
            <img src={{urlImage}} class="item--image" />
            <div class="item--name">{{name}}</div>
            <div class="item--color">Cor: {{color}}</div>
            <div class="item--genre">Gênero: {{genre}}</div>
        </div>
    {{/animals}}
    
</div>
</body>

